{
  "name": "react-next-starter-kit",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "clean": "rimraf ./.next ./.dist",
    "build": "yarn clean && next build && next export -o dist/",
    "dev": "yarn clean && next",
    "start": "next start",
    "lint": "yarn lint:ts && yarn lint:prettier && yarn lint:eslint && yarn lint:stylelint",
    "lint:fix": "yarn lint:prettier:fix && yarn lint:eslint:fix && yarn lint:stylelint:fix",
    "lint:ts": "tsc",
    "lint:eslint": "eslint --ext .js,.jsx,.ts,.tsx ./ --color --cache",
    "lint:eslint:fix": "eslint --ext .js,.jsx,.ts,.tsx ./ --color --cache --fix",
    "lint:prettier": "prettier -c ./",
    "lint:prettier:fix": "prettier -c ./ --write",
    "lint:stylelint": "stylelint '**/*.css'",
    "lint:stylelint:fix": "stylelint '**/*.css' --fix",
    "healthcheck": "yarn lint && yarn test && yarn build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.(ts,tsx)": [
      "tsc --noEmit",
      "prettier --write",
      "eslint --color --fix --cache"
    ],
    "*.(css)": [
      "stylelint"
    ]
  },
  "devDependencies": {
    "@types/node": "22.14.1",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "eslint": "^7.23.0",
    "eslint-config-next": "^13.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.5",
    "lint-staged": "^10.5.4",
    "next": "^13.1.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "stylelint": "^16.18.0",
    "stylelint-config-standard": "^38.0.0"
  },
  "dependencies": {
    "classnames": "^2.5.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.8.3"
  }
}
